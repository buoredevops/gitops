pipeline{
    
    agent any
    stages{
        stage("git checkout"){
            steps{
                git branch: 'main', url: 'https://github.com/buoredevops/gitops'
            }
            
        }
        stage ('build image') {
            steps{ 
                //sh 'docker system prune -a'
               sh "docker build -t buore/demoapp:${BUILD_NUMBER}   -f demoapp/Dockerfile  ."
               sh 'docker images'
            } 
        }
        stage ('deploy image to registry') {
            
                 docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
                 sh "docker push buore/demoapp:${BUILD_NUMBER}"    
              }
                
            } 
        }

    }


     // stage('Update manifest') {
     //    sh "cat demoapp-deployment.yaml"
     //    echo "updating manifest"
     //    build job: 'updatemanifest', parameters: [string(name: 'DOCKERTAG', value: env.BUILD_NUMBER)]
     //    }

