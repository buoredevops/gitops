pipeline{
    
    agent any
    stages{
        stage("git checkout"){
            steps{
                git branch: 'main', url: 'https://github.com/buoredevops/gitops'
            }
            
        }
        stage ('build image') {
            steps{ 
                //sh 'docker system prune -a'
               sh "docker build -t buore/demoapp:${BUILD_NUMBER}   -f demoapp/Dockerfile  ."
               sh 'docker images'
            } 
        }
        stage ('deploy image to registry') {

            steps{ 
                withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'USER', passwordVariable:'PASSWD')]){
                    echo ${PASSWD} | docker login -u ${USER} --password-stdin  
                    sh "docker push buore/demoapp:${BUILD_NUMBER}"
                }
                
            } 
        }

    }

}

