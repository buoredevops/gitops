pipeline{
    agent any

    environment {
    DOCKERHUB_CREDENTIALS = credentials('dockerhub')
    }

    stages{

        stage ('checkout'){
        steps {
            checkout scm
           }
        }
        stage ('build image') {

            steps{ 
                //sh 'docker system prune -a'
               sh "docker build -t buore/demoapp:${BUILD_NUMBER}   -f demoapp/Dockerfile  ."
               sh 'docker images'
            } 
        }

        stage ('deploy image to registry') {

            steps{ 
                withCredentials([usernamePassword(credentials: 'dockerhub', usernameVariable: USER, passwordVariable:PASSWD)]){
                    echo ${PASSWD} | docker login -u ${USER}. â€”password-stdin  
                }
                sh "docker push buore/demoapp:${BUILD_NUMBER}"
            } 
        }



    }


}

